<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="979dp"
            android:layout_height="799dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="ExtraText">


                    <TextView
                        android:id="@+id/scout_name_text"
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/scout_name_text" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/scout_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/scout_name_input" />

                    <TextView
                        android:id="@+id/match_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/match_number_text" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/match_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/match_number_input"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/team_number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/team_number_text" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/team_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/team_number_input" />

                    <TextView
                        android:id="@+id/total_points_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total_points_text" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/total_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/total_points_input" />

                </LinearLayout>

                <View
                    android:id="@+id/dividerTop"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="?android:attr/listDivider" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/TheSplitter"
                android:layout_width="match_parent"
                android:layout_height="475dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="977dp"
                        android:layout_height="352dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="461dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/coral_header" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/L1Text"
                                    android:layout_width="64dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/l1_text" />

                                <TextView
                                    android:id="@+id/L1Points"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/_0" />

                                <Button
                                    android:id="@+id/L1CoralDec"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/black"
                                    android:text="@string/dec_button" />

                                <Button
                                    android:id="@+id/L1CoralInc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/black"
                                    android:text="@string/inc_button" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/L2Text"
                                    android:layout_width="64dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/l2_text" />

                                <TextView
                                    android:id="@+id/L2Points"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/_0" />

                                <Button
                                    android:id="@+id/L2CoralDec"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/black"
                                    android:text="@string/dec_button" />

                                <Button
                                    android:id="@+id/L2CoralInc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/black"
                                    android:text="@string/inc_button" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/L3Text"
                                    android:layout_width="64dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/l3_text" />

                                <TextView
                                    android:id="@+id/L3Points"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/_0" />

                                <Button
                                    android:id="@+id/L3CoralDec"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/black"
                                    android:text="@string/dec_button" />

                                <Button
                                    android:id="@+id/L3CoralInc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/black"
                                    android:text="@string/inc_button" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/L4Text"
                                    android:layout_width="64dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/l4_text" />

                                <TextView
                                    android:id="@+id/L4Points"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/_0" />

                                <Button
                                    android:id="@+id/L4CoralDec"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/black"
                                    android:text="@string/dec_button" />

                                <Button
                                    android:id="@+id/L4CoralInc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/black"
                                    android:text="@string/inc_button" />
                            </LinearLayout>

                            <View
                                android:id="@+id/divider3"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:background="?android:attr/listDivider" />

                            <TextView
                                android:id="@+id/algaeHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/algae_text" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/ProcessorText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/processor_text" />

                                <TextView
                                    android:id="@+id/ProcessorPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/_0" />

                                <Button
                                    android:id="@+id/ProcessorDec"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/medium_green"
                                    android:text="@string/dec_button" />

                                <Button
                                    android:id="@+id/ProcessorInc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/medium_green"
                                    android:text="@string/inc_button" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="59dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/NetText"
                                    android:layout_width="67dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/net_text" />

                                <TextView
                                    android:id="@+id/NetPoints"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/_0" />

                                <Button
                                    android:id="@+id/NetDec"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/medium_green"
                                    android:text="@string/dec_button" />

                                <Button
                                    android:id="@+id/NetInc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:backgroundTint="@color/medium_green"
                                    android:text="@string/inc_button" />
                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:id="@+id/dividerSideBar"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:id="@+id/rightBar"
                            android:layout_width="272dp"
                            android:layout_height="350dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="76dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="65dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="134dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/autoHeader"
                                            android:layout_width="match_parent"
                                            android:layout_height="31dp"
                                            android:layout_weight="1"
                                            android:text="@string/auto_data_text" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/PastStartingLineText"
                                                android:layout_width="87dp"
                                                android:layout_height="wrap_content"
                                                android:text="@string/past_starting_line_text" />

                                            <CheckBox
                                                android:id="@+id/PastStartingLineCheck"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:buttonTint="@color/orange"
                                                tools:ignore="TouchTargetSizeCheck" />
                                        </LinearLayout>

                                    </LinearLayout>

                                    <View
                                        android:id="@+id/dividerTeleOp"
                                        android:layout_width="10dp"
                                        android:layout_height="match_parent"
                                        android:background="?android:attr/listDivider" />

                                    <LinearLayout
                                        android:layout_width="124dp"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/teleopHeader"
                                            android:layout_width="124dp"
                                            android:layout_height="wrap_content"
                                            android:text="@string/tele_op_switch_text" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/teleOpCheckText"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:text="@string/tele_op_switch_data_text_auto" />

                                            <Switch
                                                android:id="@+id/teleOpCheck"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>

                                <View
                                    android:id="@+id/dividerEndGame"
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"
                                    android:background="?android:attr/listDivider" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/endGameHeader"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/end_game_text" />

                            <Spinner
                                android:id="@+id/parkDropDown"
                                android:layout_width="match_parent"
                                android:layout_height="53dp"
                                android:background="#fafad2 "
                                android:backgroundTint="#FAFAD2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/checkBox"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:buttonTint="@color/gold"
                                    android:text="@string/gold_team_text"
                                    tools:ignore="InefficientWeight" />

                                <CheckBox
                                    android:id="@+id/defense"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/played_defense_check_text" />
                            </LinearLayout>

                            <Button
                                android:id="@+id/SubmitButtion"
                                android:layout_width="match_parent"
                                android:layout_height="77dp"
                                android:text="@string/submit"
                                tools:ignore="TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/jerry"
                                android:layout_width="match_parent"
                                android:layout_height="58dp"
                                android:layout_weight="1"
                                android:text="@string/jerry" />

                        </LinearLayout>

                        <View
                            android:id="@+id/divider4"
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?android:attr/listDivider" />

                        <LinearLayout
                            android:layout_width="186dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/gear" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/notes"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:ems="10"
                        android:hint="@string/notes"
                        android:maxWidth="950dp"
                        android:inputType="text" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>